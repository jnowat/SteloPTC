<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme â€” no action bar, matches Tauri WebView full-screen layout -->
    <style name="Theme.SteloPTC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar colour matches the app's dark slate background (#0f172a) -->
        <item name="android:statusBarColor">#0f172a</item>
        <item name="android:navigationBarColor">#0f172a</item>
        <item name="android:windowBackground">#0f172a</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Allow the WebView to draw under system bars (viewport-fit=cover).
             shortEdges is API 28+; unknown style attributes are silently ignored
             on older API levels, so no runtime crash on API 24-27. -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>
